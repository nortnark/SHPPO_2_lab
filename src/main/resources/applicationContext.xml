<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="taskList" class="org.example.SpringMenu.task.TaskList"/>
    <bean id="taskManager" class="org.example.SpringMenu.task.TaskManager"/>

    <bean class="org.example.SpringMenu.App">
        <constructor-arg ref="taskManager"/>
        <constructor-arg ref="taskList"/>
    </bean>

</beans>